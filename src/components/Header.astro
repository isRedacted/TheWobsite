---
import { Image } from "astro:assets";
import bookcase from "../assets/bookcase-smol-dither.png";
const { src, title, subtitle } = Astro.props;
---

<header>
    <div id="titlebox">
        <Image src={src} alt="" id="mug" loading={"eager"} />
        <div id="textbox">
            <h1>{title}</h1>
            <p>{subtitle}</p>
        </div>
    </div>
    <a href="/" id="bookcasebox">
        <Image src={bookcase} alt="" id="bookcase" loading={"eager"} />
        <h1>HOME</h1>
    </a>
</header>
<style>
    img {
        object-fit: scale-down;
        max-height: 5rem;
        width: auto;
    }

    header {
        display: flex;
        justify-content: space-between;
        margin-left: 1%;
        margin-right: 1%;
    }
    #mug {
        float: left;
    }
    #textbox {
        float: right;
        margin-left: 1rem;
        margin-top: -1rem;
        width: auto;
        margin-right: 0.5rem;
    }
    #textbox h1 {
        color: white;
        font-size: 2.5rem;
    }
    a {
        text-decoration: none;
    }
    h1,
    p {
        text-shadow: 1px 1px 3px #000000, 1px 1px 3px #000000, 1px 1px 3px #000000;
        font-family:Arial, Helvetica, sans-serif;
    }
    p {
        margin-top: -1.5rem;
        margin-left: 0.3rem;
        color: lightgray;
        text-wrap: wrap;
    }

    #bookcasebox {
        text-align: center;
    }
    #bookcasebox h1 {
        color: white;
        margin-top: -65%;
        font-weight: bold;
    }
    #bookcasebox:hover h1 {
        scale: 105%;
        rotate: 5deg;
    }
</style>
